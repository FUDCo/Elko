{
  "type": "serverconfig",
  "ref": "server-context",
  "component": "context",
  "name": "context",
  "bootclass": "org.elkoserver.server.context.ContextServerBoot",
  "portbase": 9000,
  "trace": {
    "levels": { "cont": "EVENT", "comm": "EVENT" },
    "dir": "./logs",
    "rollover": "daily"
  },
  "classdescbase": "classes-app,classes-bank",
  "staticsbase": "",
  "shutdownpassword": "figleaf",
  "msgdiagnostics": true,
  "entrytimeout": 30,
  "registerauto": true,
  "reservationexpire": 300,
  "listeners": [
    { "host": "${HOST}",
      "bind": "${BIND}",
      "port": 0,
      "protocol": "tcp",
      "auth": { "mode": "open" }
    },
    { "host": "${HOST}",
      "bind": "${BIND}",
      "port": 1,
      "protocol": "http",
      "domain": "${DOMAIN}",
      "root": "test",
      "auth": { "mode": "reservation" }
    },
    { "host": "${HOST}",
      "bind": "${BIND}",
      "port": 2,
      "protocol": "rtcp",
      "auth": { "mode": "reservation" }
    }
  ],
  "broker": {
    "host": "${HOST}",
    "port": 1,
    "auth": { "mode": "password", "code": "figleaf" }
  },
  "odb": {
    "kind": "mongo",
    "hostport": "${MONGOHOST}",
    "objstore": "org.elkoserver.objdb.store.mongostore.MongoObjectStore"
  }
}
